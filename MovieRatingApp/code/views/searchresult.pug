doctype html
html
  head
    style.
      #p01{
      color: red;
      font-size: 150%;
      font-style: italic
      }
      * {
      box-sizing: border-box;
      }
      /* Style the header */
      .header {
      background-color: yellow;
      text-align: center;
      padding: 15px;
      }
      /* Style the top navigation bar */
      .search {
      overflow: hidden;
      background-color: blue;
      }
      /* Style the search links */
      .search {
      float: middle;
      display: block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: underline;
      }
      /* Create three columns */
      .column {
      float: left;
      padding: 10px;
      }
      /* Middle column */
      .column.middle {
      width: 50%;
      }
      /* Right and left column */
      .column.side {
      width: 25%;
      }
  body
    .header
      h1 Search result page.
      a(href="/userprofile") Home
    .search
      h2 Here is what we found for you based on your search:
    .row
      .column.side
        h2 You searched for:
        ul#ul01
          li #{params}
      .column.middle
        h2 Movies associated with this search:
        ul#ul02
            each movie in movies
                a(href="/films/" + movie.Id) #{movie.Title}
                br
      .column.side
        h2 People associated with this search:
        ul#ul03
            each person in people
                a(href="/persons/" + person.Id) #{person.Name}
                br