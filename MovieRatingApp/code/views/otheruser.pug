doctype html
html
  head
    style.
      #p01{
      color: red;
      font-size: 150%;
      font-style: italic
      }
      * {
      box-sizing: border-box;
      }
      /* Style the header */
      .header {
      background-color: yellow;
      text-align: center;
      padding: 15px;
      }
      /* Style the top navigation bar */
      .search {
      overflow: hidden;
      background-color: blue;
      }
      /* Style the search links */
      .search {
      float: middle;
      display: block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: underline;
      }
      /* Create three columns */
      .column {
      float: left;
      padding: 10px;
      }
      /* Middle column */
      .column.middle {
      width: 25%;
      }
      /* Right and left column */
      .column.side {
      width: 25%;
      }
  body(onload="init()")
    .header
      h1 You are viewing: #{username}
      h1 #{type}
      button(type='button' id='follow') Follow
      button(type='button' id='unfollow') Unfollow
      br
      a(href="/userprofile") Home
    .search
      h2 This user's profile:
    .row
      .column.side
        h2 Other users this user follows:
        ul#ul01
            each user in usersFollow
                a(href="/OtherUser/" + user) #{user}
                br
      .column.middle
        h2 People this user follows:
        ul#ul02
            each person in peopleList
                a(href="/persons/" + person.Id) #{person.Name}
                br
      .column.middle
        h2 Reviews:
        each review in reviews
          ul
            li Movie: #{review.Movie}
            li Score: #{review.Score}
            li Short Review: #{review.ShoRev}
            li Long Review: #{review.LenRev}
      .column.side
        h2 Recommendations
        ul#ul04
          each movie in recommendedMoviesList
            a(href="/films/" + movie.Id) #{movie.Title }
            br
    script
      include otheruser.js	
      