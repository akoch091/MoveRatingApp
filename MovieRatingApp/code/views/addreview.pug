html
  head
  body(onload="init()")
    div
      h1 Leave a review for movie: #{title}:
      div
        label(for='moviescore') Choose a score out of 10:
        select(name='scores' id='scoreID')
          option(value='0') 0
          option(value='1') 1
          option(value='2') 2
          option(value='3') 3
          option(value='4') 4
          option(value='5') 5
          option(value='6') 6
          option(value='7') 7
          option(value='8') 8
          option(value='9') 9
          option(value='10') 10
      br
      br
      div
        label Short review:
        input(type='text' id='shortreview')
      br
      br
      div
        label(for='longreview') Long review::
        textarea(name='w3review' rows='4' cols='50' id='longreview') 		
      br
      br
    button(type='button' id='submitbutton') Submit review
    br
    br
    script
      include addReviewScript.js